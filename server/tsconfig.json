{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "api"]
}
